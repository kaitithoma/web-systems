<!-- app/views/products/index.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>Products</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container", style="margin-top: 20px">
  <h1>Site Settings and Actions</h1>

  <div>
   <%= form_with(model: @site, local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
        <% if @site.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading"><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h4>
            <ul>
              <% @site.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :name, class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control', required: true %>
          <div class="invalid-feedback">
            Please provide a valid name.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :url, class: 'form-label' %>
          <%= form.text_field :url, class: 'form-control', required: true %>
          <div class="invalid-feedback">
            Please provide a valid URL.
          </div>
        </div>

        <div class="d-flex justify-content-between">
          <%= form.submit 'Save changes', class: 'btn btn-primary' %>
          <%= link_to 'Back', sites_path, class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  // Example starter JavaScript for disabling form submissions if there are invalid fields
  (function () {
    'use strict'
    var forms = document.querySelectorAll('.needs-validation')

    Array.prototype.slice.call(forms)
      .forEach(function (form) {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }

          form.classList.add('was-validated')
        }, false)
      })
  })()
</script>

</div>

</body>
</html>