<!-- app/views/products/index.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>Products</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container", style="margin-top: 20px">
  <h1>Site Settings and Actions</h1>

  <div>
    <li>
      <strong>Site:</strong>
      <%= @site.name %>
    </li>
    <li>
      <strong>URL:</strong>
      <%= @site.url %>
    </li>

    <p><%= link_to 'Edit', edit_site_path(@site), class: 'btn btn-primary' %></p>
  </div>

    <h3>Setup Data</h3>
    <p>
      <%= button_to '1. Fetch Products Data', fetch_data_site_path(@site), method: :post, class: 'btn btn-danger' %>
    </p>
    <p>
      <%= button_to '2. Fetch Brands Data', fetch_brands_site_path(@site), method: :post, class: 'btn btn-danger' %>
    </p>
    <p>
      <%= button_to '3. Add Retailer Categories', add_categories_site_path(@site), method: :post, class: 'btn btn-danger' %>
    </p>
    <p>
      <%= button_to '4. Add Retailer Products', add_products_site_path(@site), method: :post, class: 'btn btn-danger' %>
    </p>
    <p>
      <%= button_to '5. Add Price Metrics', add_price_metrics_site_path(@site), method: :post, class: 'btn btn-danger' %>
    </p>
    <p>
      <%= button_to '6. Connect Retailer Products with Retailer Brands', connect_retailer_products_with_retailer_brands_site_path(@site), method: :post, class: 'btn btn-danger' %>
    </p>
    <p>
      <%= button_to '7. Match Brands', match_brands_site_path(@site), method: :post, class: 'btn btn-danger' %>
    </p>
    <p>
      <%= button_to '8. Match Products', match_products_site_path(@site), method: :post, class: 'btn btn-danger' %>
    </p>

</div>

</body>
</html>